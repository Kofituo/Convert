<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@anim/from_bottom_left_to_top_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top_right_to_bottom_left</item>
    </style>

    <style name="Left" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/from_bottom_left_to_top_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top_right_to_bottom_left</item>
    </style>

    <style name="Right">
        <item name="android:windowEnterAnimation">@anim/from_bottom_right_to_top_left</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top_left_to_bottom_right</item>
    </style>
    <style name="Center">
        <item name="android:windowEnterAnimation">@anim/from_center_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_center_top_to_bottom</item>
    </style>
</resources>
