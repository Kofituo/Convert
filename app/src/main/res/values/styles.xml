<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- ignore the naming -->
    <!-- for the up one -->
    <style name="UpLeft">
        <item name="android:windowEnterAnimation">@anim/bottom_left_to_top_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top_right_to_bottom_left</item>
    </style>

    <style name="UpRight">
        <item name="android:windowEnterAnimation">@anim/from_bottom_right_to_top_left</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top_left_to_bottom_right</item>
    </style>

    <style name="UpCenter">
        <item name="android:windowEnterAnimation">@anim/from_center_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_center_top_to_bottom</item>
    </style>

    <!-- for the down one -->
    <style name="DownLeft">
        <item name="android:windowEnterAnimation">@anim/from_top_left_to_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_bottom_right_to_top_left</item>
    </style>

    <style name="DownRight">
        <item name="android:windowEnterAnimation">@anim/from_top_right_to_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/shrink_bottom_left_to_top_right</item>
    </style>

    <style name="DownCenter">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="trial0" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="but" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#03dac6</item>
    </style>
</resources>
